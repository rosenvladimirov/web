<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_logos" model="ir.ui.view">
            <field name="name">res.company.logos.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="logos" string="Company Logos">
                        <group>
                            <group>
                                <field name="logo_report_src" widget="image"/>
                            </group>
                            <group>
                                <field name="logo_email_src" widget="image"/>
                                <field name="logo_web" widget="image"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>